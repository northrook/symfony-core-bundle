<!DOCTYPE html>
<html lang="en" id="{$document->id}" theme="{$document->theme ?: 'system'}" status="init">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{$document->title}</title>
    <meta n:foreach="$document->meta('document') as $metaDocument" n:attr="$metaDocument">

    <!-- Robots -->
    <meta n:foreach="$document->meta('robots') as $robots" n:attr="$robots">

    <!-- Remaining Meta Tags -->
    <meta n:foreach="$document->meta() as $metaTags" n:attr="$metaTags">

    {foreach $document->assets() as $asset}{$asset|noescape}{/foreach}
</head>
<body n:attr="$document->bodyAttributes()">
{block 'body'}
    Welcome!
{/block}
</body>

</html>